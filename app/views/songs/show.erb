<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song Show Page</h1>

<h2>Song Name:</h2>
<h3><%=@song.name%></h3>

<h2>Song Artists:</h2>
<h3><a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></h3>

<h2>Song Genres:</h2>
	<ul>
		<%@song.genres.each do |genre|%>
			<li><a href="/genres/<%=genre.slug%>"><%=genre.name%></a></li>
		<%end%>
	</ul>



