<h1>Edit A New Song</h1>

<form method="POST" action="/songs/<%=@song.slug%>">
<input id="hidden" type="hidden" name="_method" value="patch">
	<p>
		<label>Song Name: <input id="Name" type="text" name="song[name]" value="<%=@song.name%>"></label>
	</p>	
	<p>
		<label>Artist Name: <input id="Artist Name"type="text" name="song[artist]" value="<%=@song.artist.name%>"></label>
	</p>
	<p>
		<label>Song Genres: </label>
	</p>
		<%Genre.all.each do |genre|%>
			<label for="song[genre]"><%= genre.name.capitalize %></label>
		  
		  <input id="<%=genre.name%>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %> >
	  <% end %>
	<input type='submit' value="Save" >
</form>