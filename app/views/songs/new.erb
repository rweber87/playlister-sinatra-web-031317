<h1>Add A New Song</h1>

<form method="POST" action="/songs">
	<p>
		<label>Song Name: <input id="Name" type="text" name="song[name]"></label>
	</p>
	<p>
		<label>Artist Name: <input id="Artist Name"type="text" name="song[artist]"></label>
	</p>
	<p>
		<label>Song Genres: </label>
	</p>
		<%@genres.each do |genre|%>
			<label for="song[genre]"><%= genre.name.capitalize %></label>
		  
		  <input id="<%=genre.name%>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"/>
	  <% end %>
	<button type='submit' >Create</button>
</form>